@page "/"
@inherits CoreComponentBase
@inject NavigationManager NavigationManager
@inject Organizations.IOrganizationAppService OrganizationAppService

<AuthorizeView>
    <Authorized>
        <Heading Size="HeadingSize.Is4">Dashboard</Heading>
        @if (IsOrganizationSetupRequired)
        {
            <CardDeck>
                <OrganizationSetupCard OnSetupCompleted="OnSetupCompleted" /> 
            </CardDeck>
        }
    </Authorized>
    <NotAuthorized>
        <WelcomeComponent />    
    </NotAuthorized>
</AuthorizeView>